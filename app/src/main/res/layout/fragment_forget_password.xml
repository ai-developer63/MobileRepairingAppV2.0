<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ForgetPasswordFragment">


    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/backarrow"
        android:layout_toStartOf="@id/Registertextid"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="5dp"
        android:foregroundGravity="center"/>

    <TextView
        android:id="@+id/Registertextid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Update Password"
        android:textColor="@color/Colour_After_click"
        android:textSize="35sp" />

    <RelativeLayout
        android:id="@+id/EditTextHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Registertextid"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp">



        <TextView
            android:id="@+id/TextEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="15dp"
            android:text="Email address"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/EmailEdittext"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/TextEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextdesign"
            android:ems="15"
            android:hint="Enter your Email Address"
            android:inputType="textEmailAddress"
            android:paddingStart="30dp"
            android:textColor="@color/textcolor" />
        <EditText
            android:id="@+id/otpEditText"
            android:layout_width="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_height="50dp"
            android:layout_below="@id/EmailEdittext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:background="@drawable/edittextdesign"
            android:ems="15"
            android:hint="Enter 5 digit OTP"
            android:inputType="number"
            android:paddingStart="30dp"
            />

        <TextView
            android:id="@+id/TextPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/otpEditText"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="15dp"
            android:text="Enter your New password"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/PasswordEdittextEdittext"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/TextPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextdesign"
            android:ems="15"
            android:hint="Enter your Password"
            android:inputType="textPassword"
            android:paddingStart="30dp"
            />
        <ToggleButton
            android:id="@+id/togglePasswordVisibility"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toEndOf="@id/PasswordEdittextEdittext"
            android:layout_marginStart="-40dp"
            android:layout_alignBottom="@id/PasswordEdittextEdittext"
            android:background="@drawable/ic_eye_toggle"
            android:textOff=""
            android:textOn=""
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditTextHolder"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/btn_design"
            android:backgroundTint="@color/Colour_After_click"
            android:stateListAnimator="@animator/click_animation"
            android:text="Update Password"
            android:textColor="@color/white" />

    </RelativeLayout>
    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="visible">

        <!-- Centered Spinner -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_gravity="center" />
    </FrameLayout>

</RelativeLayout>