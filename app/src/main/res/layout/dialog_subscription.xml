<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/dialog_subscription.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/closeicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_icon"
        android:layout_gravity="end"/>

    <TextView
        android:id="@+id/packexplainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="तपाईंले कुनै पनि एक योजना (मासिक, अर्धवार्षिक, वा वार्षिक) खरिद गरेपछि, सबै सेवाहरू अनलक हुनेछ। यसको अर्थ तपाईंले सबै सामग्रीहरूमा असीमित पहुँच प्राप्त गर्नुहुनेछ, चाहे त्यो कुनै पनि प्रकारको सामग्री किन नहोस्।"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:textColor="@color/teal_700"/>

    <Spinner
        android:id="@+id/spinner_subscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/textview_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price: "
        android:textSize="16sp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/button_subscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Purchase Now"
        android:textColor="@color/white"
        android:backgroundTint="@color/Colour_After_click"/>
</LinearLayout>