<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/dialog_subscription_safe.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Close icon -->
    <ImageView
        android:id="@+id/closeicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_icon"
        android:layout_gravity="end"/>

    <!-- Explainer text (neutral wording, no price mentioned) -->
    <TextView
        android:id="@+id/packexplainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="केहि Courses locked छन्। Coupon Code प्रयोग गरेर सबै Courses unlock गर्न सक्नुहुन्छ। Coupon को लागि हाम्रो Facebook Customer Support मा सम्पर्क गर्नुहोस्।"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:textColor="@color/teal_700"/>

    <!-- Spinner (if needed for options, keep neutral) -->
    <Spinner
        android:id="@+id/spinner_subscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>

    <!-- Neutral text view (remove price display) -->
    <TextView
        android:id="@+id/textview_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coupon required to unlock all content"
        android:textSize="16sp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="gone"/>

    <!-- Safe button -->
    <Button
        android:id="@+id/button_subscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Support"
        android:textColor="@color/white"
        android:backgroundTint="@color/Colour_After_click"/>
</LinearLayout>
