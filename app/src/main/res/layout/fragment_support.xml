<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <!-- Outer LinearLayout for main content structure and centralizing on large screens -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_gravity="center_horizontal"
        android:maxWidth="600dp"> <!-- Simulates the max-width-xl from HTML -->

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Need a Hand?"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We're here to assist you quickly and effectively."
                android:textSize="16sp"
                android:textColor="@color/colorAccentDemo" />
        </LinearLayout>

        <!-- Support Options Container (Card Stack) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- Card 1: Live Chat (Messenger) - Vibrant Blue -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_messenger"
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Left Color Bar (Simulates border-l-4) -->
                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="@color/blue" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Icon: Chat -->
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_messenger"
                            android:contentDescription="Live Chat Icon"
                            app:tint="@color/blue"
                            android:layout_marginEnd="16dp" />

                        <!-- Text Block -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Live Chat (Messenger)"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/Colour_After_click" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Average response: 5 minutes\nYour country is used to show the right support contact."
                                android:textSize="12sp"
                                android:textColor="@color/gray" />
                        </LinearLayout>

                        <!-- Arrow Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:contentDescription="Proceed"
                            app:tint="@color/gray"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2: Call Support - Friendly Green -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_call"
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Left Color Bar (Simulates border-l-4) -->
                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="@color/green" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Icon: Call -->
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_call"
                            android:contentDescription="Call Support Icon"
                            app:tint="@color/green"
                            android:layout_marginEnd="16dp" />

                        <!-- Text Block -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Call Support"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/subtleAccent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Connect with a team member instantly"
                                android:textSize="12sp"
                                android:textColor="@color/gray" />
                        </LinearLayout>

                        <!-- Arrow Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:contentDescription="Proceed"
                            app:tint="@color/gray"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 3: Submit a Ticket (Placeholder) - Neutral Gray -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_ticket"
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Left Color Bar (Simulates border-l-4) -->
                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Icon: Mail -->
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_email"
                            android:contentDescription="Submit Ticket Icon"
                            app:tint="@color/gray"
                            android:layout_marginEnd="16dp" />

                        <!-- Text Block -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Submit a Ticket"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/cardview_dark_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="For complex, non-urgent inquiries"
                                android:textSize="12sp"
                                android:textColor="@color/gray" />
                        </LinearLayout>

                        <!-- Arrow Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:contentDescription="Proceed"
                            app:tint="@color/gray"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Footer / FAQ Link -->
        <TextView
            android:id="@+id/text_faq_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Right Now, We only have above Support for our app So, In future Inapp messaging for Support is coming.."
            android:textColor="@color/colorAccentDemo"
            android:textSize="14sp"
            android:paddingTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/shape_border_top" /> <!-- Use a drawable to create the divider line -->

    </LinearLayout>
</ScrollView>
